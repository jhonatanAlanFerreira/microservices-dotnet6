@model ProductViewModel

<form asp-action="Delete">
    <input asp-for="Id" hidden/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product</h1>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="form-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Name" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CategoryName" class="form-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="CategoryName" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Description" class="form-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="Description" class="form-control" rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="ImageURL" class="form-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="ImageURL" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Price" class="form-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="col-md-2">
                    <input disabled asp-for="Price" class="form-control" />
                </div>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control"/>
            </div>

        </div>
    </div>
</form>